<% layout("/layouts/boilerplate") %>
<body>
  <style>
    .Box {
      margin-top: 5px;
      background: rgba(244, 243, 243, 0.951);
      padding: 1rem;
      border-radius: 20px;
      width: 550px;
      height: 450px;
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2),0 6px 20px 0 rgba(0, 0, 0, 0.19);
      margin-left: auto;
      margin-right: auto;
    }
  </style>
  <div class="row mt-3">
    <!-- <h2 class="col-6 offset-3">SignUp on Wanderlust</h2> -->
    <div class="col-6 offset-3 Box">
        <h2>SignUp on Wanderlust</h2>
      <form action="/signup" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            name="username"
            id="username"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            required
          />
        </div>
        <button class="btn btn-success" style="margin-bottom: 10px">
          SignUp
        </button>
      </form>
    </div>
  </div>
</body>
